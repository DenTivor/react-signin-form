.login-form
    &__content
        width: 340px
        background-color: rgb(255, 255, 255)
        border-top: 2px rgb(0, 124, 72) solid
        padding: 27px 30px 0px 30px
    &__name
        font-size: 28px
        font-family: "Roboto-Medium", Helvetica, Arial, sans-serif
        text-align: center
    &__actions
        padding-top: 18px
    &__footer
        padding-top: 22px;
        padding-bottom: 35px;
        & > *
            margin-top: 14px
        & .centered-text-block:first-child
            margin-top: 0px
    &__signin-button
        background-color: rgb(0, 124, 72)
        border: 0px
        display: inline-block
        cursor: pointer
        color: rgb(255, 255, 255)
        font-family: "Roboto-Medium", Helvetica, Arial, sans-serif
        font-size: 20px
        outline: none
        padding: 10px 10px
        text-align: center
        text-decoration: none
        width: 100%
        

        &:hover
            background-color: #039457

        &:active
            position: relative
            top: 1px


.labeled-input
    margin-top: 17px

    &:first-child
        margin-top: 0px

    &__label
        display: inline-block
        font-size: 18px
        font-family: "Roboto-Medium", Helvetica, Arial, sans-serif
        padding-top: 4px
    &__input
        -webkit-box-sizing: border-box /* Safari/Chrome, other WebKit */
        -moz-box-sizing: border-box    /* Firefox, other Gecko */
        box-sizing: border-box         /* Opera/IE 8+ */
        border: 1px rgb(199, 206, 212) solid
        font-size: 30px
        margin-top: 3px
        padding: 6px 10px
        width: 100%

.labeled-checkbox
    padding-top: 20px

    &__box
        margin: 0px
        width: 16px
        height: 16px
    
    &__label
        color: rgb(30, 34, 57)
        font-size: 18px
        padding-left: 8px