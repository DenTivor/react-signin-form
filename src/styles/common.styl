body
	min-height: 500px;

html, body 
	height: 100%

html, body, input
	font-family: "Roboto-latin", Helvetica, Arial, sans-serif

.wrapper 
	height: 100%
	background-color: rgb(234,234,234)
	background-position: center center
	background-repeat: no-repeat

.content 
	display: table
	height: 100%
	margin: 0 auto

.content-inner 
	display: table-cell
	text-align: center
	vertical-align: middle

	& *
		text-align: initial

.link 
	color: black
	font-size: 15px
	font-family: "Roboto-Medium", Helvetica, Arial, sans-serif
	text-decoration: underline
	&: hover, &: focus
		text-decoration: none

.centered-text-block
	display: inline-block
	text-align: center
	width: 100%
