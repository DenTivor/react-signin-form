.labeled-input
    margin-top: 17px
    position: relative

    &:first-child
        margin-top: 0px

    &__label
        display: inline-block
        font-size: 18px
        font-family: "Roboto-Medium", Helvetica, Arial, sans-serif
        padding-top: 4px
    &__input
        box-sizing: border-box
        border: 1px rgb(199, 206, 212) solid
        font-size: 30px
        margin-top: 3px
        padding: 6px 10px
        width: 100%
    
    &__error
        position: absolute
        width: 90%
        background: rgba(243, 141, 141, 0.8)
        padding: 5px
        border-radius: 5px
        box-sizing: border-box
        right: 0
        transition: top 0.5s ease 0s
        top: 0px
        opacity: 0
        text-align: right
        &.anim
            opacity: 1
            top: -3px
        
    