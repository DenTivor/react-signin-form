.centered-form
    &__content
        background-color: rgb(255, 255, 255)
        border-top: 2px rgb(0, 124, 72) solid
        padding: 27px 30px 0px 30px
        width: 340px
    &__name
        font-family: "Roboto-Medium", Helvetica, Arial, sans-serif
        font-size: 28px
        text-align: center
    &__actions
        padding-top: 18px
    &__footer
        padding-bottom: 35px
        padding-top: 22px
        & > *
            margin-top: 14px
        & .centered-text-block:first-child
            margin-top: 0px
    &__action-button
        background-color: rgb(0, 124, 72)
        border: 0px
        color: rgb(255, 255, 255)
        cursor: pointer
        display: inline-block
        font-size: 20px
        font-family: "Roboto-Medium", Helvetica, Arial, sans-serif
        outline: none
        padding: 10px 10px
        text-align: center
        text-decoration: none
        width: 100%

        &:hover
            background-color: #039457

        &:active
            position: relative
            top: 1px
        
        &[disabled]
            opacity: 0.5
